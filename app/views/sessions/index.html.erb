<div class="login">
  <h1>Register</h1>
  <form action="/sessions/create" method="post">
    <input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>">  
    <p>First Name:
    <input type="text" name="user[first_name]"><br></p>
    <p>Last Name:
    <input type="text" name="user[last_name]"><br></p>
    <p>Email:
    <input type="email" name="user[email]"><br></p>
    <p>Password:
    <input type="password" name="user[password]"><br></p>
    <p>Confirm PW:
    <input type="password" name="confirm_pw"><br></p>
    <input type="submit" value="Register"><br>
  </form>
</div>
<div class="login">
  <h2>Log in</h2>
  <form action="/sessions/login" method="post">
    <input type="hidden" name="authenticity_token" value="<%=form_authenticity_token%>"> 
    <p>Email:
    <input type="email" name="email"><br></p>
    <p>Password:
    <input type="password" name="password"><br></p>
    <input type="submit" value="Login"><br>
  </form>
</div>
